    <div> 
        <div class="container">
        <div class="container">
        <form action="profile" method="POST"> 
                <div id="text">
                <h1><center>Profile page</center></h1>
                <label><b>Username:</b></label> 
                <input type="text" placeholder="Your Username" readonly="readonly" value="<% if(username) { %><%= username %><% } %><% if(msgg) { %><%= msgg %><% } %>" name="username"><br>
                <label><b>Fullname:</b></label> <br>
                <input type="text" placeholder="Your Fullname" value="<% if(fullname) { %><%= fullname %><% } %><% if(msgg) { %><%= msgg %><% } %>" name="fullname" required><br>			
                <label><b>Emailid:</b></label> &nbsp
                <input type="text" placeholder="Your emailid" value="<% if(emailid) { %><%= emailid %><% } %><% if(msgg) { %><%= msgg %><% } %>" name="emailid" id="mn" required><br>
                <label><b>xender:</b></label>&nbsp
                <input type="radio" name="xender" value="Male" <% if(xender=="Male"){ %> checked <% } %>>Male
			    <input type="radio" name="xender" value="Female" <% if(xender=="Female"){ %> checked <% } %>>Female<br><br>
                <label><b>Qulification:</b></label>&nbsp&nbsp&nbsp;
                <select value="Qulification" style="color: red;font-family:Bold" name="qulification" required>
                    <option <% if(qualification=='MBA') { %> selected <% } %><% if(msgg) { %><%= msgg %><% } %>>MBA</option>
                    <option <% if(qualification=='BSC(IT)') { %> selected <% } %><% if(msgg) { %><%= msgg %><% } %>>BSC(IT)</option>
                    <option <% if(qualification=='BE') { %> selected <% } %><% if(msgg) { %><%= msgg %><% } %> >BE</option>
                    <option <% if(qualification=='B.COM') { %> selected <% } %><% if(msgg) { %><%= msgg %><% } %> >B.COM</option>
                </select><br><br>
                <label><b>Password:</b><label>
                <input type="password" onmouseover="onover()" onmouseout="onout()" id="p1" 
                value="<% if(password) { %><%= password %><% } %><% if(msgg) { %><%= msgg %><% } %>" placeholder="Your Password" name="password" required><br>
                </div>
                <div id="button">
                <input type="submit" value="Update" id="button" name="update_btn" style="font-size:20px" class="sub_btn">
