                        <option>Men,Women Fashion</option>
                        <option>Beauty,Health,Grocery</option>
                        <option>Sports,Fitness</option>
                        <option>Toy,Baby Product,Kid s Fashion</option>
                        <option>Car,MotorBike,Industriyal</option>
                    </select></br></br>			
                    <label><b>Product Name:</b></label> 
                    <input type="text" placeholder="Enter Product Name" name="product" required><br> 
                    <label><b>Brand:</b></label> &nbsp;
                    <input type="text" placeholder="Enter Brand Name" name="brand" id="mn" required><br>
                    <label><b>Price:</b></label>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    <input class="input100" type="number" name="price" placeholder="Enter Price" required><br><br>
                    <label><b>Description:</b></label><br><br>
                    <textarea name="description"  style="width: 100%; line-height: 50px;"placeholder="Enter Description about Product..." required></textarea><br><br>
                        <center><input type="file" name="file" id="file" onchange="loadFile(event)" ></center><br>
                        <center><img id="output" width="200"></img></center><br>
                    <input class="sub_btn" type="submit" style="font-size:20px;" name="sub" value="AddCategory">
                </div>
            </form> 
